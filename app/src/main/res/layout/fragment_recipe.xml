<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.recipe.RecipeFragment">

    <TextView
        style="@style/PageTitleForTextView"
        android:id="@+id/act_recipe_title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:text="@string/title_recipe"/>

    <SearchView
        android:id="@+id/recipes_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Search for specific recipes here"/>

    <ListView
        android:id="@+id/recipes_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>